{% extends 'PdvBundle::layout.html.twig' %}

{% block content -%}
    <script type="text/javascript">
	function submitForm(boton){
		if ($('#multinet_pdvonline_pdvonlinebundle_cliente_descripcion').val() != "") {
			$(boton).button('loading');
		};
	}
</script>
<div class="container">
     <div class="page-header">
        <h4>Unidades de Medida <small>Edici√≥n</small></h4>
        <a href="{{ path('unidadesmedida') }}" style="float:right" class="btn btn-success btn-sm"><span class="glyphicon glyphicon-arrow-left"></span> Regresar a Listado</a>
    </div>
	<form action="{{ path('unidadesmedida_update',{'id':entity.id}) }}" method="POST">
