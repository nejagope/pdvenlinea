{% extends 'PdvBundle::layout.html.twig' %}
{% block content -%}

 <script type ="text/javascript">
    function redireccionar(id){
        window.location.href = "{{path('unidadesmedida_show')}}/"+id;
    }
</script>

<div class = "container">
    <div class="page-header">
        <h4> Unidades de Medida <small>Listado</small></h4>
        <a href="{{ path('unidadesmedida_new')}}" style = "float:right" class="btn btn-success btn-sm">
            <span class = "glyphicon-plus"> </span> Nueva Unidad de Medida </a>
    </div>
    </br>
    {% if entities is not empty %}
    
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Descripcion</th>                
                <th>Createdat</th>                
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr onclick="redireccionar({{entity.id}})" style="cursor:pointer">
                <td><a href="{{ path('unidadesmedida_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.descripcion }}</td>
            
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>                            
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% else %}
        <div class="alert alert-warning"> No existen registros </div>
    {% endif %}
       
</div>
    {% endblock %}
