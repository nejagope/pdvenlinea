{% extends 'PdvBundle::layout.html.twig' %}

{% block content -%}
   <script type="text/javascript">
    function redireccionar(id){
        window.location.href = "{{ path('categoriaproducto_show') }}/"+id;
    }
</script>
<div class="container">
    <div class="page-header">
        <h4>Categorías de Producto <small>Listado</small></h4>
        <a href="{{ path('categoriaproducto_new') }}" style="float:right" class="btn btn-success btn-sm"><span class="glyphicon glyphicon-plus"></span> Nuevo Tipo de Empleado</a>
    </div>
    <br/>
    {% if entities is not empty %}
    <table class="table table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Descripcion</th>
                <th>Fecha de Creación</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr onclick="redireccionar({{ entity.id }})" style="cursor:pointer">
                <td><a href="{{ path('tipoempleado_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.descripcion }}</td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% else %}
        <div class="alert alert-warning">No existen registros</div>
    {% endif %}
</div>
    {% endblock %}
