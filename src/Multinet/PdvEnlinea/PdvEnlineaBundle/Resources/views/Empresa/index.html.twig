{% extends 'PdvBundle::layout.html.twig' %}

{% block content -%}
<script type ="text/javascript">
    function redireccionar(id){
        window.location.href = "{{path('empresa_show')}}/"+id;
    }
</script>

<div class = "container">
    <div class="page-header">
        <h4> Empresas <small>Listado</small></h4>
        <a href="{{ path('empresa_new')}}" style = "float:right" class="btn btn-success btn-sm">
            <span class = "glyphicon-plus"> </span> Nueva Empresa </a>
    </div>
    </br>
    {% if entities is not empty %}
    

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nitempresa</th>
                <th>Nombreempresa</th>
                <th>Direccionempresa</th>
                <th>Mailempresa</th>                
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr onclick="redireccionar({{entity.id}})" style="cursor:pointer">
                <td><a href="{{ path('empresa_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nitempresa }}</td>
                <td>{{ entity.nombreempresa }}</td>
                <td>{{ entity.direccionempresa }}</td>
                <td>{{ entity.mailempresa }}</td>
                
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% else %}
        <div class="alert alert-warning"> No existen registros </div>
    {% endif %}
       
</div>
    {% endblock %}
